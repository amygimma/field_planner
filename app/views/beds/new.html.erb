

<div class="row">
  <div class="col-xs-12 col-sm-6 col-md-4 pull-left new_form">
  <h3> Add Beds</h3>
  <%= form_for(@bed) do |f| %>

    <div class="field">
      <ul>
        <li>
          <%= f.label :bed %>
          <%= f.text_field :bed %>
        </li>
        <li>
          <%= f.label :frost_date %>
          <%= f.text_field :frost_date %>
        </li>
        
      <ul>
    </div>
    <%= f.submit "Save", class: "btn btn-large btn-primary" %>
  <% end %>
  
</div>
