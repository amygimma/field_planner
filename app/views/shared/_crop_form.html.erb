<%= form_for(@crop) do |f| %>

  <div class="field">
    <ul>
      <li>
        <%= f.label :crop %>
        <%= f.text_field :crop %>
      </li>
      <li>
        <%= f.label :family %>
        <%= f.text_field :family %>
      </li>
      <li>
        <%= f.label :greenhouse_time %>
        <%= f.text_field :greenhouse_time %>
      </li>
      <li>
        <%= f.label :maturity_time %>
        <%= f.text_field :maturity_time %>
      </li>
      <li>
        <%= f.label :notes %>
        <%= f.text_area :notes %>
      </li>
  </div>
  <%= f.submit "Save", class: "btn btn-large btn-primary" %>
<% end %>
